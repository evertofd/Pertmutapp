<%= form_with(model: product, local: true, class: "form-horizontal") do |form| %>
<% if product.errors.any? %>
<div id="error_explanation">
  <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

  <ul>
    <% product.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>

<div class="form-group text-center">
  <%= form.label :name, "Título", class: "col-lg-2 control-label" %>
  <div class="col-lg-10">
    <%= form.text_field :name, id: :product_name %>
  </div>
</div>

<div class="form-group form-group-custom">
  <%= form.label :picture, "URL Imagen", class: "col-lg-2 control-label" %>
  <div class="col-lg-10">
    <%= image_tag(product.picture, style: "margin-bottom: 10px; border-radius: 5px;") if product.picture? %>

    <%= form.text_field :picture, id: :product_picture, class: "form-control" %>
  </div>
  <%= form.hidden_field :picture_cache %>
</div>



<div class="form-group">
  <%= form.label :description, "Descripción", class: "col-lg-2 control-label" %>
  <div class="col-lg-10">
    <%= form.text_area :description, id: :product_content, class: "form-control", rows: 10 %>
  </div>
</div>


<div class="field">
  <%= form.label :enabled %>
  <%= form.check_box :enabled, id: :product_enabled %>
</div>

<div class="form-group">
  <div class="col-lg-10 col-lg-offset-2">
    <% if user_signed_in? %>
      <%= form.submit "Enviar", class: "btn btn-primary" %>
      <%= link_to 'Volver', products_path, class: "btn btn-warning"  %>
      <%= link_to 'Editar Productos', products_offer_path, class: "btn btn-succes"  %>
    <% end %>
  </div>
</div>
<fieldset>
  <% end %>